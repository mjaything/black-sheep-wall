extends layouts/main

block content
    .form-container
        form(action=routes.editProfile, method="post")
            label(for="profile-picture") Profile Picture
            input(type="file", id="profile-picture", name="profile-picture")
            input(type="text", placeholder="Full Name", name="full-name")
            input(type="text", placeholder="E-mail Address", name="e-mail")
            input(type="submit", value="Update Profile")
        a.form-container__link(href=routes.changePassword) Change Password